<!DOCTYPE html>

<% root_class = yield(:root_class) %>

<html lang="<%= html_lang %>" class="<%= root_class %>" data-fr-scheme="system">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">

    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <meta name="application-name" content="<%= Current.application_name %>">

    <meta
      name="apple-mobile-web-app-title"
      content="<%= Current.application_name %>"
    >

    <meta
      name="format-detection"
      content="telephone=no,date=no,address=no,email=no,url=no"
    >

    <% if request.host != ENV["APP_HOST"] %>
      <link
        rel="canonical"
        href="<%= "https://#{ENV['APP_HOST']}#{request.fullpath}" %>"
      >
    <% end %>

    <%= csrf_meta_tags %>

    <% if administrateur_signed_in? || instructeur_signed_in? %>
      <script
        id="lasuite-gaufre-script"
        async
        defer
        src="https://integration.lasuite.numerique.gouv.fr/api/v1/gaufre.js"
      ></script>
    <% end %>

    <title>
      <%= content_for?(:title) ? "#{sanitize(yield(:title)).gsub("&nbsp;", " ")} Â· #{Current.application_name}" : Current.application_name %>
    </title>

    <%= render partial: "layouts/favicons" %>

    <%= Gon::Base.render_data(camel_case: true, init: true, nonce:  request.content_security_policy_nonce) %>

    <%= vite_client_tag %>
    <%= vite_react_refresh_tag %>
    <%= vite_javascript_tag 'application' %>
    <% if administrateur_signed_in? %>
      <%= vite_javascript_tag 'track-admin' %>
    <% end %>

    <%= preload_link_tag(asset_url("Marianne-Regular.woff2")) %>
    <%= preload_link_tag(asset_url("Spectral-Regular.ttf")) %>

    <%= vite_stylesheet_tag 'main', media: 'all' %>
    <%= stylesheet_link_tag 'application', media: 'all' %>

    <%= yield(:invisible_captcha_styles) %>
    <%= render partial: 'layouts/setup_theme' %>
  </head>
  <body
    id="<%= content_for(:page_id) %>"
    class="<%= browser.platform.ios? ? 'ios' : '' %>"
    data-controller="turbo number-input fix-table-border"
  >
    <%= render partial: 'layouts/skiplinks' %>
    <%= render partial: 'layouts/display_theme_modal' %>

    <div class="page-wrapper">
      <% if ENV['TEAM_ON_STRIKE'].present? %>
        <%= render partial: 'layouts/strike_banner' %>
      <% end %>

      <%= render partial: "layouts/outdated_browser_banner" %>
      <%= render partial: 'layouts/pre_maintenance' %>

      <% if staging? %>
        <div id="beta">Env Test</div>
      <% end %>

      <div id="sticky-header" class="sticky-header-container">
        <%= content_for(:sticky_header) %>
      </div>

      <%= render partial: "layouts/header" %>
      <main id="contenu" role="main">
        <%= render partial: "layouts/flash_messages" %>

        <%= content_for?(:content) ? yield(:content) : yield %>
      </main>

      <% if content_for?(:footer) %>
        <%= content_for(:footer) %>
      <% else %>
        <%= render 'footer' %>
      <% end %>

      <%= yield :charts_js %>
    </div>
    <%= render Attachment::ProgressBarComponent.new %>
  </body>
</html>
